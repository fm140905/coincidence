// Post processing input in json format
// use //... and /* ... */ for single-line and multi-line comments
{
    "ChannelSettings":
    {
        "Defaults":
        {
            "Chunksize": 512, // buffer = 512 MB
            "MaxNumPulses": 10000,
            "Polarity": "negative",
            "Dynamicrange": 2.0,
            "TimeStep": 2,
            "Resolution": 14,
            "Headers": [2,2,8,2,2,4,4],
            "SampleSize": 2,
            "DCOffset": 0.2,
            "BaselineSamples": 8,
            "BaselineLocation": "Tail", // or "Head"
            "SavePulses": 0,

            "PreTrigger": 48,
            "Gates": {
                "PreGate": 20,
                "ShortGate": 100,
                "LongGate": 300
            },
            
            "Calibration": {
                "Integral": {
                    "ON": true,
                    "Coefficient": 1.0
                },
                "Height": {
                    "ON": false,
                    "Coefficient": 1.0
                }
            },

            "Rejection": {
                "ON": false,
                "ZeroSupression": true,
                "LowVoltageThreshold": 0.05,
                "ClipRejection": true
            },

            "EnergyCut": {
                "ON": false,
                "LowerThreshold": 0.0,
                "UpperThreshold": 500.0
            },

            "PSDCut": {
                "ON": false,
                "LazyCut": true,
                "LowerThreshold": 0.0,
                "UpperThreshold": 1.0,

                "QuadraticCut": false,
                "QuadracticCoefficients": [0.0,0.0,0.5]
            },
            
            "Timing": {
                "ON": true,
                "Method": "DIACFD", //DCFD
                "Interpolation": 8,
                "Fraction": 0.4,
                "TimeDelay": 4 
            },

            "PlotPulses":{
                "Good pulses": {
                    "ON": true,
                    "Number": 100
                },
                "Rejected pulses": {
                    "ON": true,
                    "Number": 100
                }
            },

            "Plot Pulse Height Distribution": {
                "ON":true,
                "Calibrated": true,
                "xmin": 0,
                "xmax": 1000,
                "Bins": 100
            },

            "Plot Pulse Integral Distribution": {
                "ON":true,
                "Calibrated": true,
                "xmin": 0,
                "xmax": 1000,
                "Bins": 100
            },

            "Plot PSD": {
                "ON":true,
                "Calibrated": true,
                "xmin": 0,
                "xmax": 1000,
                "XBins": 100,
                "ymin": 0,
                "ymax": 1.0,
                "YBins": 100
            }

        },
        "ChannelSpecific":[
            {
                "ChannelNumber": 0,
                "ON": true,
                "Path": "test/testdata/channel0.bin",
                "MaxNumPulses": 100,
                "Polarity": "positive",
                "Dynamicrange": 1.0,
                "Gates": {
                    "PreGate": 50,
                    "LongGate": 100
                },
                "Calibration": {
                    "Integral": {
                        "ON": false
                    },
                    "Height": {
                        "ON": true,
                        "Coefficient": 100.0
                    }
                }
            },
            {
                "ChannelNumber": 1,
                "ON": true,
                "Path": "test/testdata/channel1.bin",
                "PSDCut": {
                    "ON": true,
                    "LazyCut": false,
    
                    "QuadraticCut": true,
                    "QuadracticCoefficients": [0.1,0.01,0.2]
                },
                
                "Timing": {
                    "ON": true,
                    "Method": "DCFD"
                }
            }
        ]
    },
    "CoincidenceSettings": 
    {
        "ON": true,
        "CoincidenceChannels": [0, 8],
        "TimeWindow": 200,
        "SaveTimeDifference": true,
        "PlotTOF": {
            "ON": true,
            "xmin": -10,
            "xmax": 10,
            "Bins": 100
        }
    }
}